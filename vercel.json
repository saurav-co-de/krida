{
    "version": 2,
    "builds": [
        {
            "src": "api/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/server.js"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "frontend/$1"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}